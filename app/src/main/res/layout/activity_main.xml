<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.acidgrid.presentation.MainActivity"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ImageStart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"

            android:src="@drawable/re"
            />

        <TextView
            android:id="@+id/TitleMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            tools:text="@string/app_name"
            android:layout_below="@+id/ImageStart"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="5dp"
            android:textSize="25sp"/>



        <TextView
            android:id="@+id/Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:textAlignment="center"
            android:text="@string/Description"
            android:gravity="center_vertical"
            android:layout_below="@id/TitleMain"/>
        <TextView
            android:id="@+id/webpage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_below="@id/Description"
            android:text="@string/WebPage"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/ic_internet"
            android:drawableTint="@color/colorPrimary"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"/>
        <TextView
            android:id="@+id/Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_below="@id/webpage"
            android:text="@string/Address"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawableTint="@color/colorPrimary"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"/>
        <TextView
            android:id="@+id/Hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_below="@id/Address"
            android:text="@string/Hours"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/ic_clock"
            android:drawableTint="@color/colorPrimary"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"/>
        <TextView
            android:id="@+id/Apps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_below="@id/Hours"
            android:text="Our Apps"
            android:textAlignment="center"
            android:drawableTint="@color/colorPrimary"
            android:drawablePadding="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="5"
            android:layout_below="@id/Apps"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/math"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/descarga"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/spikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/spikes"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/jump"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jump"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_weight="1"
                 />

            <ImageView
                android:id="@+id/orb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/unnamed"
                android:scaleType="fitXY"
android:layout_weight="1"
                android:adjustViewBounds="true"

                 />

        </LinearLayout>

    </LinearLayout>





</LinearLayout>
